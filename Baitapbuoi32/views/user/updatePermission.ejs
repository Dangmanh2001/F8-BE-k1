<h2>Phân quyền</h2>
<form action="" method="post">
  <div class="col mb-2">
    <input
      type="text"
      class="form-control"
      name="role"
      value=<%=role.name%>
    placeholder="Tên role..." />
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th width="20%">Module</th>
        <th>Quyền</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Quản lý User</td>
        <td>
          <div class="row">
            <div class="col">
              <label>
                <input type="checkbox" name="permission" value="Xem" <%= data.includes("Xem")?"checked":"" %> />
                Xem
              </label>
            </div>
            <div class="col">
              <label>
                <input type="checkbox" name="permission" value="Thêm" <%= data.includes("Thêm") ? "checked" : "" %>/>
                Thêm
              </label>
            </div>
            <div class="col">
              <label>
                <input type="checkbox" name="permission" value="Sửa" <%= data.includes("Sửa")?"checked":"" %>/>
                Sửa
              </label>
            </div>
            <div class="col">
              <label>
                <input type="checkbox" name="permission" value="Xóa"  <%= data.includes("Xóa")?"checked":"" %>/>
                Xóa
              </label>
            </div>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
  <button class="btn btn-primary">Lưu thay đổi</button>
</form>
