<h3>Rút gọn link</h3>
<% if(msg?.length){ %>
    <div class="col alert alert-success"><%= msg %></div>
    <% } %>
<% if(err?.length){ %>
    <div class="col alert alert-danger"><%= err %></div>
    <% } %>
<form action="" method="post">
    <div class="mb-3">
      <label for="">Link rút gọn</label>
      <input
        type="text"
        name="shorten_link"
        class="form-control"
        value=<%= shorten  %>
        disabled
      />
    </div>
    <div class="mb-3">
        <label for="">ID Link rút gọn mới</label>
        <input
          type="text"
          name="shorten_id"
          class="form-control"
          placeholder="Example: <%= shorten.replace("https://t.ly/","")  %>"
          
          
        />
      </div>
    <div class="mb-3">
        <label for="">Link gốc</label>
        <input
          type="text"
          name="original_link"
          class="form-control"
          value=<%= original  %>
        />
      </div>
    <a href="/short_link/edit/<%= id %>"><button type="submit" class="btn btn-primary">Sửa</button></a>

  </form>
